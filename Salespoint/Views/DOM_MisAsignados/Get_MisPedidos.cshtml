@using RESTAURANTE;
@using System.Collections.Generic;

@{
    List<Pedido_BE> lista = ViewBag.lista;
}

@foreach (var row in lista)
{
    <div class="col-12 col-sm-12 col-md-12 col-lg-6 col-xl-6 btn">
        <div class="card border-width-2 border-primary border" onclick="Entregar_Pedido(@row.ID_PEDIDO)" style="width:100%; height:100%">
            <div class="row justify-content-center">
                <img class="elevation-2" src="https://png.pngtree.com/element_our/20200630/ourlarge/pngtree-delivery-service-takeaway-villain-biking-image_2275210.jpg" style="width:200px; height:150px"><br />
                <div class="col-12 col-sm-12 col-md-12 col-lg-12 col-xl-12 mt-2">
                    <span class="info-box-text text-danger font-weight-bold h3">Pedido @row.ID_PEDIDO</span><br />
                </div>
                <div class="col-12 col-sm-12 col-md-12 col-lg-12 col-xl-12 text-left mt-1 p-3">
                    <span class="h5"><b>Fecha creado:</b> @row.FECHA_CREACION.ToString("dd/MM/yyyy HH:mm tt")</span><br />
                    <span class="h5"><b>Nombre:</b> @row.NOMBRE</span><br />
                    <span class="h5"><b>Teléfono:</b> @row.TELEFONO</span><br />
                    <span class="h5"><b>Dirección:</b> @row.DIRECCION</span>
                </div>
            </div>
        </div>
    </div>
}