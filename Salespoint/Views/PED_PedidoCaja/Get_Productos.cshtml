@using RESTAURANTE
@{
    List<Pedido_BE> lista = ViewBag.data;
}


@foreach (var row in lista)
{
    <div class="col-12 col-sm-12 col-md-4 col-lg-3 col-xl-2 mt-3">
        <div class="text-center justify-content-center border-primary border-5 border hvr-grow w-100" onclick="ShowModalAddMenu(@row.ID_MENU_RESTAURANTE, '@row.NOMBRE', '@row.PRECIO_VENTA')">
            <img class="img-circle elevation-2" src="@row.PATH_IMAGEN" alt="User Avatar" style="width:100px; height:100px">
            <div class="card-footer p-0">
                <ul class="nav flex-column bg-transparent">
                    <li class="nav-item bg-transparent">
                        <h5 class="text-success font-weight-bold" style="height:55px">@row.NOMBRE</h5>
                        <h6 class="font-weight-bold">Q @row.PRECIO_VENTA</h6>
                    </li>
                </ul>
            </div>
        </div>
    </div>
}