@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    @*<link rel="apple-touch-icon" sizes="76x76" href="https://distribuidorarepuestoseleden.com/Varios/LogoElEden.jpeg">*@
    
    @*<link rel="icon" type="image/png" href="https://distribuidorarepuestoseleden.com/Varios/LogoElEden.jpeg">*@
    <title>SALESPOINT</title>
    <!--     Fonts and icons     -->
    <link rel="stylesheet" type="text/css" href="https://fonts.googleapis.com/css?family=Roboto:300,400,500,700|Roboto+Slab:400,700|Material+Icons" />
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/latest/css/font-awesome.min.css">
    <!-- CSS Files -->
    <link href="~/Content/assets Material Design/css/material-dashboard.css?v=2.1.0" rel="stylesheet" />
    <link href="~/Content/assets Material Design/demo/demo.css" rel="stylesheet" />
</head>
<body class="off-canvas-sidebar">
    <!-- End Navbar -->
    <div class="page-header login-page header-filter" @*filter-color="green"*@ style="background-image: url('Content/Images/background1.png'); background-size: cover; background-position: top center; ">
        <!--   you can change the color of the filter page using: data-color="blue | purple | green | orange | red | rose " -->
        <div class="container">
            <div class="row">
                <div class="col-lg-4 col-md-6 col-sm-8 ml-auto mr-auto">
                    <form class="form" method="" action="">
                        <div class="card card-login card-hidden">
                            <div class="card-header card-header-success text-center">
                                <h4 class="card-title">SALESPOINT</h4>
                            </div>
                            <div class="card-body ">
                                <p class="text-center text-info">LOGIN</p>
                                <span class="bmd-form-group">
                                    <div class="input-group">
                                        <div class="input-group-prepend">
                                            <span class="input-group-text">
                                                <i class="material-icons">face</i>
                                            </span>
                                        </div>
                                        <input id="txtUsuario" type="text" class="form-control" placeholder="USUARIO...">
                                    </div>
                                </span>
                                <span class="bmd-form-group">
                                    <div class="input-group">
                                        <div class="input-group-prepend">
                                            <span class="input-group-text">
                                                <i class="material-icons">lock_outline</i>
                                            </span>
                                        </div>
                                        <input id="txtPassword" type="password" class="form-control" placeholder="CONTRASEÑA...">
                                    </div>
                                </span>
                            </div>
                            <div class="card-footer justify-content-center">
                                <button id="btnValidarLogin" class="btn btn-outline-primary btn-lg">INICIAR SESION</button>
                            </div>
                            <div class="card-footer justify-content-center">
                                <a href="#" id="btnAbrirModalPass">¿Olvidaste tus credenciales?</a>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
    <div class="modal" id="modalRecuperarPass" tabindex="-1">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h3 class="modal-title">RECUPERAR CREDENCIALES</h3>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <form>
                        <div class="form-group">
                            <label for="txtUsuarioChange">USUARIO</label>
                            <input type="text" class="form-control" id="txtUsuarioChange" required>
                        </div>
                        <div class="form-group">
                            <label for="txtCorreo">EMAIL REGISTRADO</label>
                            <input type="text" class="form-control" id="txtCorreo" required>
                        </div>
                        <div class="form-group">
                            <label for="txtpass1">NUEVA CONTRASEÑA</label>
                            <input type="text" class="form-control" id="txtpass1" required>
                        </div>
                        <div class="form-group">
                            <label for="txtpass2">CONFIRMA CONTRASEÑA</label>
                            <input type="text" class="form-control" id="txtpass2" required>
                        </div>
                    </form>
                </div>
                <div class="modal-footer text-center justify-content-center">
                    <button type="button" class="btn btn-success" id="btnCambiarPass">CAMBIAR</button>
                    <button type="button" class="btn btn-dark" data-dismiss="modal">CANCELAR</button>
                </div>
            </div>
        </div>
    </div>

    <!--   Core JS Files   -->
    <script src="~/Content/assets Material Design/js/core/jquery.min.js"></script>
    <script src="~/Content/assets Material Design/js/core/bootstrap-material-design.min.js"></script>
    <script src="~/Content/assets Material Design/js/plugins/perfect-scrollbar.jquery.min.js"></script>

    <script src="~/Content/assets Material Design/js/material-dashboard.js?v=2.1.0" type="text/javascript"></script>
    <!-- Material Dashboard DEMO methods, don't include it in your project! -->
    <script src="~/Content/assets Material Design/demo/demo.js"></script>

    <!--SWEET ALERT-->
    <script src="//cdn.jsdelivr.net/npm/sweetalert2@11"></script>

    <script>
        $(document).ready(function () {
            md.checkFullPageBackgroundImage();
            setTimeout(function () {
                // after 1000 ms we add the class animated to the login/register card
                $('.card').removeClass('card-hidden');
            }, 700);
        });
    </script>
    <script src="~/Scripts/Login/HomeLogin.js"></script>
</body>
</html>