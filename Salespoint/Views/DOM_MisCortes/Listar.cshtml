@using RESTAURANTE
@{
    List<Caja_BE> data = ViewBag.data;
}
<div class="col-12 col-sm-12 col-md-12 col-lg-12 col-xl-12">
    <div class='input-group-prepend'>
        <button onclick="ConfirmRealizarCorte()" type="button" class="btn btn-outline-success mr-1" title="Realizar Corte"><i class="fad fa-check-circle"></i></button>
        <div class='input-group-text bg-secondary'>
            <i class='fa fa-search'></i>
        </div>
        <input type="text" class="form-control text-left" id="txtFiltro" />
    </div>
</div>
<table class="table table-hover table-sm table-striped display nowrap table-bordered" style="width:100%" width="100%" id="tableData">
    <thead>
        <tr>
            <th class="headColor text-center pr-2">PEDIDO</th>
            <th class="headColor text-center pr-2">MESA</th>
            <th class="headColor text-center pr-2">FECHA Y HORA</th>
            <th class="headColor text-center pr-2">MESERO</th>
            <th class="headColor text-center pr-2">COBRÓ</th>
            <th class="headColor text-center pr-2">TOTAL</th>
        </tr>
    </thead>
    <tbody id="tBodyData">
        @foreach (var row in data)
        {
            <tr>
                <td class="text-center">@row.ID_PEDIDO</td>
                <td class="text-center">@row.ID_MESA</td>
                <td>@row.FECHA_CREACION.ToString("dd/MM/yyyy HH:mm")</td>
                <td>@row.CREADO_POR</td>
                <td>@row.COBRADO_POR</td>
                <td class="text-right">@row.TOTAL.ToString("N2")</td>
            </tr>
        }
    </tbody>
</table>



<script>
    $(document).ready(function () {
        $("#tableData").dataTable({
            scrollY: (window.innerHeight - 300) + 'px',
            scrollX: true,
            scrollCollapse: true,
            fixedHeader: true,
            ordering: false,
            info: false,
            paginate: false,
            searching: false
        });
    });
</script>
