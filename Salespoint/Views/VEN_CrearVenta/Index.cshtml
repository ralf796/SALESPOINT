
@{
    ViewBag.TitleCard = "FACTURACIÓN";
}
<div class="row justify-content-center">
    <div class="col-12 col-sm-12 col-md-6 col-lg-6 col-xl-3">
        <form class="form-group">
            <label class="lblFloating" form="exampleFormControlSelect1">EMPRESA</label>
            <select class="form-control inputForms" id="selRolUpdate"></select>
        </form>
    </div>
    <div class="col-12 col-sm-12 col-md-6 col-lg-6 col-xl-3">
        <form class="form-group">
            <label class="lblFloating" form="exampleFormControlSelect1">TIPO DE CLIENTE</label>
            <select class="form-control inputForms" id="selRolUpdate"></select>
        </form>
    </div>
    <div class="col-12 col-sm-12 col-md-6 col-lg-6 col-xl-3">
        <form class="form-group">
            <label class="lblFloating" form="exampleFormControlSelect1">MEDIO DE PAGO</label>
            <select class="form-control inputForms" id="selRolUpdate"></select>
        </form>
    </div>
</div>
<div class="col-md-12">
    <div class="card card-secondary">
        <div class="card-header">
            <h3 class="card-title" style="height:10px; margin-top:-3px">DATOS CLIENTE</h3>
        </div>
        <div class="card-body">
            <div class="row">
                <div class="col-12 col-sm-12 col-md-6 col-lg-6 col-xl-2">
                    <form class="form-group">
                        <label class="lblFloating" for="txtUpdatePrimerNombre">NÚMERO DE NIT</label>
                        <input type="text" class="form-control inputForms" id="txtUpdatePrimerNombre">
                    </form>
                </div>
                <div class="col-12 col-sm-12 col-md-6 col-lg-6 col-xl-2">
                    <form class="form-group">
                        <label class="lblFloating" for="txtUpdateSegundoNombre">CÓDIGO DE CLIENTE</label>
                        <input type="text" class="form-control inputForms" id="txtUpdateSegundoNombre">
                    </form>
                </div>
                <div class="col-12 col-sm-12 col-md-6 col-lg-6 col-xl-4">
                    <form class="form-group">
                        <label class="lblFloating" for="txtUpdateSegundoNombre">NOMBRE DE CLIENTE</label>
                        <input type="text" class="form-control inputForms" id="txtUpdateSegundoNombre">
                    </form>
                </div>
                <div class="col-12 col-sm-12 col-md-6 col-lg-6 col-xl-2">
                    <form class="form-group">
                        <label class="lblFloating" for="txtUpdatePrimerApellido">LÍMITE DE CRÉDITO</label>
                        <input type="text" class="form-control inputForms" id="txtUpdatePrimerApellido">
                    </form>
                </div>
                <div class="col-12 col-sm-12 col-md-6 col-lg-6 col-xl-2">
                    <form class="form-group">
                        <label class="lblFloating" for="txtUpdateSegundoApellido">CRÉDITO DISPONIBLE</label>
                        <input type="text" class="form-control inputForms" id="txtUpdateSegundoApellido">
                    </form>
                </div>
                <div class="col-12 col-sm-12 col-md-6 col-lg-6 col-xl-12" style="margin-top:-13px">
                    <form class="form-group">
                        <label class="lblFloating" for="txtUpdateDireccion">DIRECCIÓN</label>
                        <input type="text" class="form-control inputForms" id="txtUpdateDireccion">
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
<div class="col-md-12">
    <div class="card card-secondary">
        <div class="card-header">
            <h3 class="card-title" style="height:10px; margin-top:-3px">DATOS ARTÍCULOS</h3>
        </div>
        <div class="card-body">
            <div class="row">
                <div class="col-12 col-sm-12 col-md-6 col-lg-6 col-xl-2">
                    <form class="form-group">
                        <label class="lblFloating" for="txtUpdateEmail">CÓDIGO</label>
                        <input type="text" class="form-control inputForms" id="txtUpdateEmail">
                    </form>
                </div>
                <div class="col-12 col-sm-12 col-md-6 col-lg-6 col-xl-2">
                    <form class="form-group">
                        <label class="lblFloating" for="txtUpdateTelCasa">CANTIDAD</label>
                        <input type="text" class="form-control inputForms" id="txtUpdateTelCasa">
                    </form>
                </div>
                <div class="col-12 col-sm-12 col-md-6 col-lg-6 col-xl-2">
                    <form class="form-group">
                        <label class="lblFloating" for="txtUpdateTelCasa">EXISTENCIA</label>
                        <input type="text" class="form-control inputForms" id="txtUpdateTelCasa" required>
                    </form>
                </div>
                <div class="col-12 col-sm-12 col-md-6 col-lg-6 col-xl-2">
                    <form class="form-group">
                        <label class="lblFloating" for="txtUpdateTelCasa">ALTO</label>
                        <input type="text" class="form-control inputForms" id="txtUpdateTelCasa" required>
                    </form>
                </div>
                <div class="col-12 col-sm-12 col-md-6 col-lg-6 col-xl-2">
                    <form class="form-group">
                        <label class="lblFloating" for="txtUpdateTelCasa">ANCHO</label>
                        <input type="text" class="form-control inputForms" id="txtUpdateTelCasa" required>
                    </form>
                </div>
                <div class="col-12 col-sm-12 col-md-6 col-lg-6 col-xl-2">
                    <form class="form-group">
                        <label class="lblFloating" for="txtUpdateTelCasa">PRECIO CATALOGO</label>
                        <input type="text" class="form-control inputForms" id="txtUpdateTelCasa" required>
                    </form>
                </div>
                <div class="col-12 col-sm-12 col-md-6 col-lg-6 col-xl-10" style="margin-top:-13px">
                    <form class="form-group">
                        <label class="lblFloating" for="txtUpdateTelCasa">DESCRIPCIÓN DE ARTÍCULO</label>
                        <input type="text" class="form-control inputForms" id="txtUpdateTelCasa" required>
                    </form>
                </div>
                <div class="col-12 col-sm-6 col-md-3 col-lg-3 col-xl-2 text-center">
                    <button style="margin-top:8px" class="btn btn-primary" id="btnAgregarDetalle"><i class="far fa-plus"></i> AGREGAR</button>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="row m-2">
    <div class="col-12 col-sm-12 col-md-12 col-lg-12 col-xl-12">
        <div class="table-responsive">
            <table class="table table-striped" id="tblVenta" width="100%" style="font-size:14.5px">
                <thead class="headColor">
                    <tr>
                        <th class="border text-center pl-2 pr-2">#</th>
                        <th class="border text-center pl-2 pr-2">ID</th>
                        <th class="border text-center pl-2 pr-2">PRODUCTO</th>
                        <th class="border text-center pl-2 pr-2">CANTIDAD</th>
                        <th class="border text-center pl-2 pr-2">PRECIO</th>
                        <th class="border text-center pl-2 pr-2">DESCUENTO</th>
                        <th class="border text-center pl-2 pr-2">SUBTOTAL</th>
                    </tr>
                </thead>
                <tbody id="tbodyDetalleVenta">
                </tbody>
            </table>
        </div>
    </div>
</div>

<div class="row justify-content-end text-right">
    <div class="col-12 col-md-12 col-xl-12 justify-content-center text-center">
        <span class="badge badge-pill badge-success" id="txtTotal" style="font-size:18px"></span>
        <button class="btn btn-secondary" type="reset" id="btnCancelarVenta"><i class="fad fa-window-close"></i> CANCELAR</button>
        <button class="btn btn-danger" id="btnCrearCotizacion"><i class="fad fa-file-pdf"></i> CREAR COTIZACION</button>
        <button class="btn btn-success" id="btnGuardarVenta"><i class="fad fa-check"></i> CREAR FACTURA</button>
    </div>
</div>