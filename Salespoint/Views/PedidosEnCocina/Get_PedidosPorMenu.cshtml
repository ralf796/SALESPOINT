@using RESTAURANTE
@{
    List<Pedido_BE> data = ViewBag.data_detalle;
    string titulo = ViewBag.titulo;
}

<h6 class="text-center text-danger font-weight-bold">@titulo</h6>
<table class="table table-hover table-sm table-striped display nowrap" style="width:100%" width="100%" id="tableData">
    <thead>
        <tr>
            <th class="headColor text-center pr-2">MESA</th>
            <th class="headColor text-center pr-2">PEDIDO</th>
            <th class="headColor text-center pr-2">MESERO</th>
            <th class="headColor text-center pr-2">CANTIDAD</th>
            <th class="headColor text-center pr-2">OBSERVACIONES</th>
            <th class="headColor text-center pr-2">FECHA Y HORA</th>
            <th class="headColor text-center"></th>
        </tr>
    </thead>
    <tbody id="tBodyData">
        @foreach (var row in data)
        {
            <tr>
                <td class="text-center">@row.ID_MESA</td>
                <td class="text-center">@row.ID_PEDIDO</td>
                <td class="text-center">@row.CREADO_POR</td>
                <td class="text-center">@row.CANTIDAD</td>
                <td>@row.OBSERVACIONES</td>
                <td class="text-center">@row.FECHA_CREACION.ToString("dd/MM/yyyy hh:mm tt")</td>
                <td style="vertical-align:middle" class="text-center">
                    <button onclick="Entregar(@row.ID_DETALLE_PEDIDO)" class="btn btn-success btn-sm border-0 " title="Entregar">
                        <i class="fad fa-trash-alt hvr-grow"></i>
                    </button>
                </td>
            </tr>
        }
    </tbody>
</table>



<script>
    $(document).ready(function () {
        $("#tableData").dataTable({
            scrollY: (window.innerHeight - 300) + 'px',
            scrollX: true,
            scrollCollapse: true,
            fixedHeader: true,
            ordering: false,
            info: false,
            paginate: false,
            searching: false
        });
    });
</script>
